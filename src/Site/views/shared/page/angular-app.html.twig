{% block content %}
    <div id="app-container-for-bootstrap">
        {% include bootstrapFolder~'/'~appName~'.html' %}
    </div>

    <script>angular.bootstrap(document.getElementById('app-container-for-bootstrap'), ['{{ appName }}']);</script>
{% endblock %}
